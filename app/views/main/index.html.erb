<div class="parallax">
  <div id="group1" class="parallax__group">  
    <div class="parallax__layer parallax__layer--base">
      <img width=100% src="https://img.buzzfeed.com/buzzfeed-static/static/2015-02/23/14/enhanced/webdr08/enhanced-buzz-wide-26665-1424720434-11.jpg?no-auto">  
    </div>
    <div class="parallax__layer parallax__layer--fore">
      <div class="jumbotron heading">  
        <div class="container">  
          <h1>ReadMe</h1>
          <%=link_to "Login", login_path, class: "btn btn-success" %>
          <%=link_to "Sign Up", signup_path, class: "btn btn-danger" %>
          <%= link_to "Login with Facebook", "/auth/facebook", class: "btn btn-primary" %>
          <% if @current_user %>
            <%= link_to "Logout", auth_logout_path, class: "btn btn-warning" %>
          <% end %>
          <% if @current_user %>
            <div class="well">  
              Current User:
              <%= @current_user.name %>
            </div>   
          <% end %>
          
        </div>
      </div>  
    </div>
  </div>
<!--  <div> -->
