<div class= "topic_header page-header">
<h1>Edit your comment</h1>
</div>

<div>

	<%= bootstrap_form_for @comment, :url => update_comment_path do |f| %>

		<%= f.label :content, 'Comment:'%>
		<%= f.text_area(:content, :value => @comment.content) %>

		<%= f.submit "Submit Change", class: "btn btn-warning" %>
		


	<% end %>

	<%= link_to 'Delete Comment', delete_comment_path, method: :delete, class: 'btn btn-danger' %>


</div>