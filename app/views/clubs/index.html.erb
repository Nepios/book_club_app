<div class="container">
	<div class="well">

		<h1><i>Join a Book Club!</i></h1>

		<div class="row">
			<div class="col-md-6">
				<% @clubs.each do |club| %>

					<h3><%= link_to club.name, :controller => "clubs", :action => "show", :id => club.id %></h3>
					<p><i>about us:</i> <%= club.blurb %></p>			
				<% end %></div>
			<div class="col-md-6"><%= image_tag("indaclub.jpg", width: "400", class: "picture") %></div>
		</div>
	
	
	</div>
</div>

