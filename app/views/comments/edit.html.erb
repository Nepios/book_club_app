<h1>Edit your comment</h1>

<div>

	<%= form_for @comment, :url => update_comment_path do |f| %>

		<%= f.label :content, 'Comment:'%>
		<%= f.text_area(:content, :value => @comment.content) %>

		<%= f.submit "Submit Change" %>
		


	<% end %>

	<%= link_to 'Delete Comment', delete_comment_path, method: :delete %>


</div>