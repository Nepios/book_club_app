<h1>My Book Club Page</h1>

<h3>Club Name: <%= @club.name %></h3>

<p><%= @club.blurb %></p>




<h5>Club Members:</h5>
<p><% @club.users.each do |u| %></p>
	<a href="/users/profile/<%= u.id %>"><%= u.name %></a>
	<% if u.id == @club.owner %>
		<p>(Club Admin)</p>
	<% end %>
<% end %>

<br>

<% if @current_user.id == @club.owner %>

	<button class="btn btn-info"><%= link_to 'Delete Club', @club, method: :delete %></button>
<% end %>	



<button class="btn btn-info"><%= link_to 'Join Club', @join, method: :put %></button>

